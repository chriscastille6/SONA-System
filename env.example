# Django Settings
SECRET_KEY=your-secret-key-here-change-this
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Railway will provide DATABASE_URL automatically)
DATABASE_URL=postgresql://user:password@localhost:5432/sona

# Email Configuration (optional â€“ required for PI approval notifications on bayoupal)
# Leave EMAIL_HOST empty to disable outgoing email (PI will not get "Protocol Approved" emails).
# For bayoupal: set these so PIs receive approval emails. Then run: python manage.py check_email_config your@nicholls.edu
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=
# Examples: Nicholls Office 365 use smtp.office365.com + your @nicholls.edu and password (or app password).
# Gmail: smtp.gmail.com + app password (see https://support.google.com/accounts/answer/185833).

# Celery / Redis (optional for background tasks)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Site Configuration
SITE_NAME=SONA Research Participation System
SITE_URL=http://localhost:8000
INSTITUTION_NAME=Nicholls State University
CANCELLATION_WINDOW_HOURS=24

# Participant Information & Consent document (/studies/participant-information/)
# PLATFORM_NAME=  (defaults to SITE_NAME if unset)
# IRB_PROTOCOL_NUMBER=To be assigned
# PLATFORM_SUPPORT_EMAIL=
# PARTICIPANT_INFO_PI_NAME=
# PARTICIPANT_INFO_PI_EMAIL=
# PARTICIPANT_INFO_PI_PHONE=
# IRB_OFFICE_NAME=
# IRB_OFFICE_PHONE=
# IRB_OFFICE_EMAIL=

# OSF Integration (optional)
OSF_API_TOKEN=your-osf-token-here


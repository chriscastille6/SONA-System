# Django Settings
SECRET_KEY=your-super-secret-key-here-generate-with-openssl-rand-hex-32
DEBUG=False
ALLOWED_HOSTS=bayoupal.nicholls.edu,localhost,127.0.0.1

# Database (from setup-postgresql.sh)
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://hsirb_user:your-password-here@localhost:5432/hsirb_db

# Site Configuration
SITE_NAME=Participant Recruitment and Management System (PRAMS)
INSTITUTION_NAME=Nicholls State University
SITE_URL=https://bayoupal.nicholls.edu/hsirb

# Email Configuration (Nicholls SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.nicholls.edu
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@nicholls.edu
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@nicholls.edu

# Celery (optional - for background tasks)
# Using memory:// for simple setup, can switch to Redis later
CELERY_BROKER_URL=memory://
CELERY_RESULT_BACKEND=memory://

# Security
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# AI Review Feature (optional)
AI_REVIEW_ENABLED=False

# Policies
CANCELLATION_WINDOW_HOURS=2
MAX_WEEKLY_SIGNUPS=3
NO_SHOW_LIMIT=2
REMINDER_HOURS_BEFORE=24,2
